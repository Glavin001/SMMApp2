.map-container
	padding 0
	margin 	0
	height	100% 
	width	100%

#map
	width 100% 
	position absolute 
	top 0px
	bottom 0px

body.hasNavigation #map
	top 50px

.map-hud .map-controls 
	z-index	10
	font-size 1.7em
	padding: 5px;
	margin-top: 10px;
	background-color: #fff;
	border-radius: 4px;
	min-height: 20px;
	border: 1px solid #ccc;
	box-shadow: 0 1px 7px rgba(0,0,0,0.65);

.map-hud .map-directions
	z-index	10
	font-size 1.0em
	overflow hidden
	padding: 5px;
	margin-top: 10px;
	background-color: #fff;
	border-radius: 4px;
	min-height: 20px;
	border: 1px solid #ccc;
	box-shadow: 0 1px 7px rgba(0,0,0,0.65);

.map-hud .map-directions *
	border-radius 4px

.map-controls ul li a
	padding 5px

.map-controls ul li form.search
	margin 0px

