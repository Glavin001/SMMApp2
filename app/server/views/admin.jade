extends layout

block header
    link(rel='stylesheet', href='/css/admin.css')
    
block content
    div.container
        h1 Admin Web UI 
        hr

        div.row
            div.col-xs-12.col-sm-4.col-md-3.col-lg-3
                div.alert.alert-info
                    div.caption
                        h4 Version
                        p.text-success.version-number 2.0.0
            div.col-xs-12.col-sm-4.col-md-3.col-lg-3
                div.alert.alert-info
                    div.caption
                        h4 Production Mode
                        p.text-success.production-mode-enabled Enabled
            div.col-xs-12.col-sm-4.col-md-3.col-lg-3
                div.alert.alert-info
                    div.caption
                        h4 Redis
                        p.text-success.redis-enabled Enabled
            div.col-xs-12.col-sm-4.col-md-3.col-lg-3
                div.alert.alert-info
                    div.caption
                        h4 Workers
                        p.text-success.num-of-workers 4
            div.col-xs-12.col-sm-4.col-md-3.col-lg-3
                div.alert.alert-info
                    div.caption
                        h4 Port
                        p.text-success.port-num 8080
            div.col-xs-12.col-sm-4.col-md-3.col-lg-3
                div.alert.alert-info
                    div.caption
                        h4 Active Users
                        p.text-success.num-of-users 1000
        
        hr

        div.admin-graph#activeUsers()
        div.admin-graph#requestsPerSecond()
        div.admin-graph#responseTime()
                        
block scripts
    script(src="http://code.highcharts.com/highcharts.js")
    script(src="http://code.highcharts.com/modules/exporting.js")
    script(src="/js/views/admin.js")
